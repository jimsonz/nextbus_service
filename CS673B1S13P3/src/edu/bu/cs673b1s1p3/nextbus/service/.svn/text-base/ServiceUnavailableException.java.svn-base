package edu.bu.cs673b1s1p3.nextbus.service;

/**
 * Exception thrown when the NextBusService is unavailable.
 * 
 * @author ton
 *
 */
public class ServiceUnavailableException extends Exception {

	private static final long serialVersionUID = 1873298203555085940L;
	
	/**
	 * Constructor accepting an error message.
	 * 
	 * @param message the error message.
	 */
	public ServiceUnavailableException(String message) {
		super(message);
	}
	
	/**
	 * Constructor accepting a cause exception.
	 * 
	 * @param cause the cause of the exception
	 */
	public ServiceUnavailableException(Throwable cause) {
		super(cause);
	}
	
	/**
	 * Constructor accepting a message and a cause.
	 * 
	 * @param message error message
	 * @param cause the exception cause
	 */
	public ServiceUnavailableException(String message, Throwable cause) {
		super(message, cause);
	}
}
